{% extends 'base.html.twig' %}


{% block title %}
	{{ course.title }}
{% endblock %}

{% block main %}
	<section id="class" class="class section-bg mb-10">
		<div class="container">


			<div class="row">
				<div class="col-md-12">
					<h3>
						<b>{{ course.title }}</b>
					</h3>
					{% if course.startTime %}
						<div class="alert alert-primary" role="alert">
							<i class="icofont-info-circle"></i>
							{{ 'course.start_time_notice'|trans({
								'%subject%': course.subject|trans,
								'%time%': course.startTime|localizeddate('none', 'short', null)
								})|raw
							}}
						</div>
					{% endif %}
					<hr>
					<div class="vid">
						<iframe width="560" height="315" src="https://www.youtube.com/embed/pvbu0bNJh6s" allowfullscreen="yes"></iframe>
					</div>
					<!--./vid -->


				</div>
				<!--.col -->
			</div>

		</div>
	</section>
	<!-- End Classes Section -->
	<p class="text-center btn-box">
		<a href="{{ path('course_index',{name:course.class})}}" class="btn-return"> {{ 'course.back'|trans }}</a>
	</p>
{% endblock %}
