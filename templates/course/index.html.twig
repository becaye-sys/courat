{% extends 'base.html.twig' %}

{% set title = 'courses.title'|trans({'%class%': ('class.' ~ class.name)|trans|raw }) %}

{% block title %}
	{{ title|striptags }}
{% endblock %}

{% block stylesheets %}
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">
 {% endblock %}

{% block main %}
	<section id="class" class="class section-bg mb-10">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3>
						<b>{{ 'courses.class'|trans }} :</b>
						<span class="badge badge-secondary">{{ ('class.' ~ class.name)|trans|raw }}</span>
					</h3>
					<hr>
					<div class="form-row align-items-center mt-5 mb-3 pb-2 border-bottom">
						<div class="col-8 col-sm-6 col-lg-3">
						  <select class="selectpicker show-tick form-control" data-size="10" data-live-search="true" data-style="btn-success">
							<option selected>Toutes les mati√®res</option>
							{% for subject in class.subjects %}
								<option value="{{ subject }}">{{ ('subject.' ~ subject)|trans }}</option>
							{% endfor %}
						  </select>
						</div>
					</div>			  
					<div class="row">
						<div class="col-md-12">
							<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
								{% if courses is not empty %}
									{% for course in courses %}
										<div class="panel panel-default custom-panel">
											<div class="panel-heading" role="tab" id="heading{{ loop.index }}">
												<div class="title" data-role="title" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
													<strong>ARABE</strong>
												</div>
											</div>
											<div id="collapse{{ loop.index }}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading{{ loop.index }}">
												<div class="panel-body">
													<table class="table">
														<thead>
															<tr>
																<th scope="col">{{ 'courses.intitule'|trans }}</th>
																<th scope="col"></th>
																<th scope="col">{{ 'courses.dateDiff'|trans }}</th>
															</tr>
														</thead>
														<tbody>
															<tr>
																<th scope="row">
																	<i class="icofont-check-circled"></i>
																	&nbsp; Lorem ipsum titre du cours</th>
																<td>
																	<a href="">
																		<i class="icofont-play-alt-2"></i>
																		&nbsp; {{ 'courses.watch'|trans }}</a>
																</td>
																<td>23/03/2020</td>
															</tr>
															<tr>
																<th scope="row">
																	<i class="icofont-check-circled"></i>
																	&nbsp; Lorem ipsum titre du cours</th>
																<td>
																	<a href="">
																		<i class="icofont-play-alt-2"></i>
																		&nbsp; Regarder</a>
																</td>
																<td>25/03/2020</td>
															</tr>
														</tbody>
													</table>
												</div>
											</div>
										</div>
									{% endfor %}
								{% else %}
									<p class="alert alert-info">Aucun n'est actuellement disponible.</p>
								{% endif %}
							</div>

						</div>


					</div>
					<!--.col -->
				</div>

			</div>
		</section>
{% endblock %}


{% block javascripts %}
   <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
{% endblock %}