{% extends 'base.html.twig' %}

{% set title = 'courses.title'|trans({'%class%': ('class.' ~ class.name)|trans|raw }) %}

{% block title %}
	{{ title|striptags }}
{% endblock %}

{% block stylesheets %}
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">
 {% endblock %}

{% block main %}
	<section id="class" class="class section-bg mb-10">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3{{ locale() == 'ar' ? ' class="text-right"' : '' }}>
						<b>{{ 'courses.class'|trans }} :</b>
						<span class="badge badge-secondary">{{ ('class.' ~ class.name)|trans|raw }}</span>
					</h3>
					<hr>
					{#<div class="form-row align-items-center mt-5 mb-3 pb-2 border-bottom">
						<div class="col-8 col-sm-6 col-lg-3">
						  <select class="selectpicker show-tick form-control" data-size="10" data-live-search="true" data-style="btn-success">
							<option selected>Toutes les mati√®res</option>
							{% for subject in class.subjects %}
								<option value="{{ subject }}">{{ ('subject.' ~ subject)|trans }}</option>
							{% endfor %}
						  </select>
						</div>
					</div>#}
					<div class="row">
						<div class="col-md-12">
							<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
								{% if courses is not empty %}
									{% for subject, courses_by_subject in courses %}
										<div class="panel panel-default custom-panel">
											<div class="panel-heading {{ locale() }}" role="tab" id="heading{{ subject }}">
												<div class="title px-3 text-{{ locale() == 'fr' ? 'left' : 'right' }}" data-role="title" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ subject }}" aria-expanded="false" aria-controls="collapse{{ subject }}">
													<strong>{{ ('subject.' ~ subject)|trans }}</strong>
												</div>
											</div>
											<div id="collapse{{ subject }}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading{{ subject }}">
												<div class="panel-body">
													{% if courses_by_subject is not empty %}
														<table class="table{{ locale() == 'ar' ? ' text-right' : '' }}">
															<thead>
																<tr>
																	<th scope="col">{{ 'courses.intitule'|trans }}</th>
																	<th scope="col"></th>
																	<th scope="col">{{ 'courses.dateDiff'|trans }}</th>
																</tr>
															</thead>
															<tbody>
																{% for course in courses_by_subject %}
																	<tr>
																		<th scope="row">
																			<i class="icofont-check-circled"></i>
																			&nbsp; {{ course.title }}</th>
																		<td>
																			<a href="{{ path('course_show', {id: course.id}) }}">
																				<i class="icofont-play-alt-2"></i>
																				&nbsp; {{ 'courses.watch'|trans }}</a>
																		</td>
																		<td>{{ course.publishedAt|localizeddate('short', 'short', null) }}</td>
																	</tr>
																{% endfor %}
															</tbody>
														</table>
													{% else %}
														<p class="alert alert-info{{ locale() == 'ar' ? ' text-right' : '' }}">{{ 'courses.empty_section'|trans }}</p>
													{% endif %}
												</div>
											</div>
										</div>
									{% endfor %}
								{% else %}
									<p class="alert alert-info">Aucun n'est actuellement disponible.</p>
								{% endif %}
							</div>

						</div>


					</div>
					<!--.col -->
				</div>

			</div>
		</section>
{% endblock %}


{% block javascripts %}
   <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
{% endblock %}