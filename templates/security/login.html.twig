{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}


{% block main %}
<form class="logregform reservation-form" method="POST">
	{% if error %}
		<div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="form-group">
		<label>{{ 'login.username'|trans }}</label>
		<input type="text" value="{{ last_username }}" name="username" id="inputEmail" class="form-control" required autofocus>
		<i class="fa fa-user"></i>
	</div>
	<div class="form-group">
		<a class="pull-right" href="{{ path('app_forgot') }}">{{ 'login.forgot'|trans }}</a>
		<label>{{ 'login.password'|trans }}</label>
		<i class="fa fa-lock"></i>
		<input type="password" name="password" id="inputPassword" class="form-control" required>
	</div>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
	<input type="checkbox" id="rememberme" name="_remember_me">{{ 'login.remember_me'|trans }}
	<button type="submit" class="btn btn-default pull-right">
		<span class="fa fa-unlock-alt"></span>
		{{ 'login.sign_in'|trans }}
	</button>

	<a class="h4" href="{{ path('app_register') }}">
		{{ 'login.register'|trans }}
	</a>
</form>
{% endblock %}

