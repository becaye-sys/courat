{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}


{% block main %}
<div class="col-md-5 col-sm-10 mx-auto">
<div class="text-center">
<form class="form-signin" method="POST">
	<h1 class="h3 mb-3 font-weight-normal">{{ 'login.title'|trans }}</h1>
	{% if error %}
		<div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<label for="inputEmail" class="sr-only">{{ 'login.username'|trans }}</label>
	<input type="text" name="username" id="inputEmail" class="form-control mb-2" placeholder="{{ 'login.username'|trans }}" required="" autofocus="">
	<label for="inputPassword" class="sr-only">{{ 'login.password'|trans }}</label>
	<input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'login.password'|trans }}" required="">
	<div class="checkbox mb-3">
	  <label>
		<input type="checkbox" name="_remember_me"> {{ 'login.remember_me'|trans }}
	  </label>
	</div>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
	<button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'login.sign_in'|trans }}</button>
</form>
</div>
</div>
{% endblock %}