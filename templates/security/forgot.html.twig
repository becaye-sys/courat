{% extends 'base.html.twig' %}

{% block title %}{{ 'forgot.title'|trans }}{% endblock %}

{% block main %}
<section class="shop-content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="row shop-login">
					<div class="col-md-6 col-md-offset-3">
						<div class="box-content">
							<h3 class="text-center">{{ 'forgot.form_title'|trans }}</h3>
							<br>
							<form class="logregform" method="POST">
                                <p>{{ 'forgot.message'|trans }}</p>
								<div class="row">
									<div class="form-group">
										<div class="col-md-12 mb-2">
                                            <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
										</div>
									</div>
								</div>
                                <div class="clearfix"></div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('password_request') }}">
								<div class="row">
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <button type="submit" class="btn btn-default">{{ 'forgot.send'|trans }}</button>
                                        </div>
                                    </div>
								</div>

								<hr>
								<div class="row">
									<div class="col-12 text-center">
										<a class="h4" href="{{ path('app_login') }}">{{ 'forgot.login'|trans }}</a>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}
