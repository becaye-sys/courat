{% extends 'base.html.twig' %}

{% block title %}{{ App.name }} &ndash; Cours de soutien en Mauritanie{% endblock %}

{% from "util/sections.html.twig" import section %}

{% block main %}
    {% set n1_items = [
        {link: 'index', title: '1<sup>ère</sup>AF'},
        {link: 'index', title: '2<sup>ème</sup>AF'},
        {link: 'index', title: '3<sup>ème</sup>AF'},
        {link: 'index', title: '4<sup>ème</sup>AF'},
        {link: 'index', title: '5<sup>ème</sup>AF'},
        {link: 'index', title: '6<sup>ème</sup>AF'}
    ] %}
    {% set n2_items = [
        {link: 'index', title: '1<sup>ère</sup>AS'},
        {link: 'index', title: '2<sup>ème</sup>AS'},
        {link: 'index', title: '3<sup>ème</sup>AS'},
        {link: 'index', title: '4<sup>ème</sup>AS'}
    ] %}
    {% set n3_items = [
        {link: 'index', title: '5<sup>ère</sup>C'},
        {link: 'index', title: '5<sup>ème</sup>D'},
        {link: 'index', title: '6<sup>ème</sup>C'},
        {link: 'index', title: '6<sup>ème</sup>D'},
    ] %}
    {% set n4_items = [
        {link: 'index', title: 'Terminale A'},
        {link: 'index', title: 'Terminale C'},
        {link: 'index', title: 'Terminale D'},
        {link: 'index', title: 'Terminale L'},
    ] %}

    {% if level == 'primaire' %}
        {{ section('Programme primaire', 'primary', n1_items) }}

    {% elseif level ==  "college" %}
        {{ section('Programme collège', 'secondary', n2_items) }}

    {% elseif level ==  "lycee" %}
        {{ section('Programme lycée', 'info', n3_items) }}

    {% elseif level ==  "terminale" %}
        {{ section('Programme terminale', 'success', n4_items) }}
    {% elseif level ==  "all" %}
        {{ section('Programme primaire', 'primary', n1_items) }}
        {{ section('Programme collège', 'secondary', n2_items) }}
        {{ section('Programme lycée', 'info', n3_items) }}
        {{ section('Programme terminale', 'success', n4_items) }}
    {% endif %}
{% endblock %}
