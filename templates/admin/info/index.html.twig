{% extends 'admin/base.html.twig' %}

{% block title %}Informations
{% endblock %}

{% block left_sidebar %}
	{% include 'admin/common/left-sidebar.twig' with { active: 'info-list' } %}
{% endblock %}

{% block main %}

    <h1>Liste des informations</h1>

    <a href="{{ path('admin_info_new') }}" class="btn btn-success pull-right"><i class="lnr lnr-plus-circle"></i> Ajouter une information</a>
    
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Lien</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for info in infos %}
            <tr>
                <td>{{ info.title }}</td>
                <td>{{ info.link }}</td>
                <td>{{ info.filename }}</td>
                <td>
                    <a href="{{ path('admin_info_show', {'id': info.id}) }}" class="btn btn-info"> <i class="lnr lnr-eye"></i></a>
                    <a href="{{ path('admin_info_edit', {'id': info.id}) }}" class="btn btn-success"> <i class="lnr lnr-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'informations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
