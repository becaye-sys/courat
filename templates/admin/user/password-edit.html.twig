{% extends 'admin/base.html.twig' %}
{% block left_sidebar %}
    {% include 'admin/common/left-sidebar.twig' with { active: '' } %}
{% endblock %}

{% block main %}
    <h3 class="page-title text-info">
        <span class="fa fa-lock"></span>
        Changer de mot de passe
    </h3>
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Changer de mot de passe</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="container-fluid">
                            {{ form_row(form.current_password) }}
                            {{ form_row(form.plainPassword.first) }}
                            {{ form_row(form.plainPassword.second) }}                            
                            <hr>
                            <button type="submit" class="btn btn-success btn-lg"><i class="fa fa-check-circle"></i> Valider</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}