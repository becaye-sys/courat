{% extends 'admin/base.html.twig' %}

{% block title %}Voir | Informations
{% endblock %}

{% block left_sidebar %}
	{% include 'admin/common/left-sidebar.twig' with { active: 'article-list' } %}
{% endblock %}

{% block main %}

    <h1>Info</h1>

    <table class="table table-responsive table-striped">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ article.link }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="{{ vich_uploader_asset(article) }}" class="img-responsive" alt="">
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_article_edit', {'id': article.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('admin/article/_delete_form.html.twig') }}

    <a class="my-3 btn btn-article" href="{{ path('admin_article') }}"><i class="lnr lnr-arrow-left fa-lg"></i> Retourner a la liste</a>
{% endblock %}
